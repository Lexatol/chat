<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox fx:controller="com.geekbrains.chat.Controller" xmlns:fx="http://javafx.com/fxml">
    <MenuBar>
        <Menu text="Program">
            <MenuItem text="Exit" onAction="#exitAct"></MenuItem>
        </Menu>
    </MenuBar>
    <TextArea fx:id="mainArea" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox>
        <TextField onAction="#sendMessage" fx:id="msgField" HBox.hgrow="ALWAYS" promptText="Введите сообщение ..."/>
        <Button onAction="#sendMessage" text="Отправить"/>
    </HBox>
</VBox>

